{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve", // react-jsx会提示不需要引用React，不支持16的版本
    "baseUrl": ".",
    "paths": {
      "@/*": ["dev/*"],
      "~~/*": ["packages/*"],
      "~/*": ["packages/MdEditor/*"]
    }
  },
  "include": ["dev/**/*.ts", "dev/**/*.tsx", "packages/**/*.ts", "packages/**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
